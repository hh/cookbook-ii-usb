if loadfont /boot/grub/font.pf2 ; then
	set gfxmode=auto
	insmod efi_gop
	insmod efi_uga
	insmod gfxterm
	terminal_output gfxterm
fi

# Setup theme
set timeout=5
set gfxmode=auto
insmod gfxterm
terminal_output gfxterm
loadfont /boot/grub/dejavu-sans-12.pf2
loadfont /boot/grub/dejavu-sans-bold-14.pf2
insmod gfxmenu
insmod png
set theme=/boot/grub/ii/theme.txt

set menu_color_normal=white/black
set menu_color_highlight=black/light-gray

set timeout=10
set default=0
set isofile="/cache/<%= @iso_name %>"

menuentry "ii-usb automated install" {
  loopback loop $isofile
	set gfxpayload=keep
	linux	(loop)/casper/vmlinuz splash quiet noprompt noeject debug-ubiquity boot=casper iso-scan/filename=$isofile file=/isodevice/preseed.seed locale=en_US nox2apic -- automatic-ubiquity # maybe-ubiquity 
	initrd	(loop)/casper/initrd.lz
}

