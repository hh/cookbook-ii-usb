if loadfont /boot/grub/font.pf2 ; then
	set gfxmode=auto
	insmod efi_gop
	insmod efi_uga
	insmod gfxterm
	terminal_output gfxterm
fi

set menu_color_normal=white/black
set menu_color_highlight=black/light-gray

set timeout=10
set default=0
set isofile="/cache/<%= @iso_name %>"

menuentry "Fully Automated Laptop install to Disk" {
  loopback loop $isofile
	set gfxpayload=keep
	linux	(loop)/casper/vmlinuz splash quiet noprompt noeject automatic-ubiquity debug-ubiquity boot=casper iso-scan/filename=$isofile file=/isodevice/preseed.seed locale=en_US nox2apic --
	initrd	(loop)/casper/initrd.lz
}

